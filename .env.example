# CampusMart Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real credentials to source control

# ===== DATABASE CONFIGURATION =====
DB_URL=jdbc:mysql://localhost:3306/campusmart?createDatabaseIfNotExist=true
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here

# ===== JWT CONFIGURATION =====
# Generate a secure 256-bit secret: openssl rand -base64 32
JWT_SECRET=your_256bit_secret_key_here
JWT_EXPIRATION=86400000

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ===== DATABASE DDL CONFIGURATION =====
# Development: use "update" to auto-create/update tables
# Production: use "validate" to prevent schema changes
DDL_AUTO=update

# ===== SQL INITIALIZATION =====
# Development: use "always" to run data.sql on startup
# Production: use "never" after initial setup
SQL_INIT_MODE=always

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_WEB=DEBUG
LOG_LEVEL_SQL=DEBUG
LOG_FILE=logs/campusmart.log

# ===== FILE UPLOAD LIMITS =====
MAX_FILE_SIZE=50MB
MAX_REQUEST_SIZE=50MB
MAX_FORM_POST_SIZE=50MB

# ===== SERVER CONFIGURATION =====
PORT=8080
